# Auto-commit Configuration File
# This file configures the behavior of the auto-commit system

# Enable/disable auto-push after commits
AUTO_PUSH=true

# Files and directories to ignore (one per line)
IGNORE_PATTERNS=(
    ".git"
    "node_modules"
    ".next"
    "dist"
    "build"
    "*.swp"
    "*.tmp"
    "*.log"
    ".DS_Store"
    "Thumbs.db"
    ".env.local"
    ".env.*.local"
    "npm-debug.log*"
    "yarn-debug.log*"
    "yarn-error.log*"
)

# Commit message format
# Available variables: {file}, {action}, {timestamp}, {branch}
COMMIT_MESSAGE_FORMAT="auto-commit: {action} {file} at {timestamp}"

# Debounce time in seconds (wait before committing after last change)
DEBOUNCE_SECONDS=2

# Maximum retry attempts for push
MAX_PUSH_RETRIES=3

# Enable verbose logging
VERBOSE=true

# Enable atomic commits (one commit per file change)
ATOMIC_COMMITS=true

# Auto-pull before push to avoid conflicts
AUTO_PULL_BEFORE_PUSH=true

# Branch to push to (leave empty to use current branch)
TARGET_BRANCH=""

# Remote repository name
REMOTE_NAME="origin"